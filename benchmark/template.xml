<?xml version="1.0"?>
<html xmlns="http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd"
      xmlns:tsn="TSN">
    <head>
        <meta http-equiv="content-type"
              content="text/html; charset=windows-1251" />
    </head>
    <body>
        <table width="800">
            <tbody>
                <tr>
                    <td width="200">
                        <table bgcolor="#000000"
                               border="0"
                               cellpadding="4"
                               cellspacing="2"
                               width="100%">
                            <tbody>
                                <tr>
                                    <td bgcolor="#ffffff">
                                        <h1>Lebowski benchmark</h1>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </td>

                    <tsn:for array="this.adverts">
                        <tsn:var name="item"
                                 value="_array[_index]" />
                        <tsn:entity name="href"
                                    value="item.url" />
                        <td valign="top"
                            width="200">
                            <table bgcolor="#000000"
                                   border="0"
                                   cellpadding="2"
                                   cellspacing="2"
                                   width="100%">
                                <tbody>
                                    <tr>
                                        <td>
                                            <font color="#ffffff">
                                                <b>
                                                    <tsn:echo text="item.title" />
                                                </b>
                                            </font>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td bgcolor="#ffffff">
                                            <small>
                                                <a href="&TSN.href;">
                                                    <tsn:echo text="item.text" />
                                                </a>
                                            </small>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tsn:for>
                </tr>

                <tr valign="top">
                    <td width="200">
                        <tsn:if test="this.sections">
                            <table cellpadding="3"
                                   width="100%">
                                <tbody>
                                    <tsn:for array="this.sections">
                                        <tsn:var name="item"
                                                 value="_array[_index]" />
                                        <tsn:entity name="bgColor"
                                                    value="_index % 2 ? '#dddddd' : '#eeeeee'" />
                                        <tsn:entity name="href"
                                                    value="'http://lb/section.html?id=' + item.id" />
                                        <tr>
                                            <td bgcolor="&TSN.bgColor;">
                                                <font color="#ffffff">
                                                    <b>
                                                        <a href="&TSN.href;">
                                                            <tsn:echo text="item.title" />
                                                        </a>

                                                        <tsn:if test="item.rip">
                                                            <font color="#999999">R.I.P.</font>
                                                        </tsn:if>
                                                    </b>
                                                </font>
                                            </td>
                                        </tr>
                                    </tsn:for>
                                </tbody>
                            </table>
                        </tsn:if>

                        <p>
                            <b>Users</b>:
                            <tsn:echo text="this.total" />
                            <br />
                            <b>Online</b>:
                            <tsn:echo text="this.online ? this.online.length : 0" />
                            <br />
                            <small>
                                <i>
                                    <tsn:for array="this.online">
                                        <tsn:entity name="href"
                                                    value="'http://lb/user.html?id=' + _index" />
                                        <a href="&TSN.href;">
                                            <tsn:echo text="_array[_index].name" />
                                        </a>
                                        " "
                                    </tsn:for>
                                </i>
                            </small>
                        </p>
                    </td>

                    <td colspan="3"
                        width="400">
                        <tsn:for array="this.news">
                            <tsn:var name="item"
                                     value="_array[_index]" />
                            <tsn:entity name="href"
                                        value="'http://lb/news.html?id=' + item.id" />
                            <b>
                                <tsn:echo text="item.time + ' ' + item.title" />
                            </b>
                            <br />

                            <small>
                                <tsn:echo text="item.text" />
                                <a href="&TSN.href;">
                                    [ read full story ]
                                </a>
                            </small>
                            <br />
                        </tsn:for>
                    </td>
                </tr>
                <tr>
                    <td colspan="4"
                        align="center">
                        <hr />
                        <small>
                            <i>This test based on "Big Lebowski" test by Alexey A. Rybak, 2005.
                                <br />
                                Please send all questions and suggestions to
                                <b>reki@reki.ru</b>
                            </i>
                        </small>
                    </td>
                </tr>
            </tbody>
        </table>
    </body>
</html>