<?xml version="1.0" encoding="UTF-8"?>

<!-- Шаблон страницы, входная точка для данных -->
<ten:root xmlns:ten="TEN" xmlns="http://www.w3.org/1999/xhtml">
	<!-- Подключение скриптов, используемых на этой странице -->
		<ten:data key="JS" action="append">
			<script type="text/javascript" src="//page.js"> </script>
		</ten:data>

		<ten:data key="name" value="this" action="prepend" />

		<ten:block name="first">
				Before
				<ten:query method="this.getList" arguments="'filter', 100, this.getData()" params="error, data">
						<ten:echo data="data" />
						<ten:echo data="data" />
				</ten:query>
				After
		</ten:block>

		<ten:block name="second" params="error, data">
				<ten:query method="this.getList">
						<ten:render block="end" />
				</ten:query>
		</ten:block>

		<!-- Рендеринг шаблона раздела -->
		<ten:render file="service.xml" />
</ten:root>