<?xml version="1.0" encoding="UTF-8"?>
<!-- Шаблон основного каркаса разметки -->

<ten:root xmlns:ten="TEN" xmlns="http://www.w3.org/1999/xhtml">
	<!-- Заголовок типа контента и статус по-умолчанию -->
	<ten:status code="200" />
	<ten:header name="Content-Type" value="text/html" />

	<!-- Подключение общих блоков -->
	<ten:render file="common.xml" />

	<!DOCTYPE html>
	<html>
		<head>
			<!-- Результирующий код подключения стилей -->
			<ten:render block="CSS" />
		</head>
		<body>
			<div class="wrapper">
				<!-- Результирующий код страницы -->
				<ten:render block="CONTENT" />
			</div>

			<!-- Результирующий код подключения скриптов -->
			<ten:render block="JS" />
		</body>
	</html>
</ten:root>