<?xml version="1.0" encoding="UTF-8"?>

<!-- Шаблон общих блоков для всех страниц -->
<ten:root xmlns:ten="TEN" xmlns="http://www.w3.org/1999/xhtml">

	<!-- Если блок контента не определён... -->
	<ten:if expr="!_block.hasOwnProperty('CONTENT')">
		<!-- Очищаем код подключения статики -->
		<ten:data key="CSS" value="''" />
		<ten:data key="JS" value="''" />

		<!-- Установка корректного статуса перед выводом тела ответа -->
		<ten:status code="404" />

		<!-- Контент по-умолчанию - страница 404 -->
		<ten:block name="CONTENT">
			<ten:render file="/error/404.xml" />
		</ten:block>
	</ten:if>

	<!-- Общие стили, вставляются перед остальными. Может быть переопределён выше -->
	<ten:block name="CSS" type="default">
		<link rel="stylesheet" type="text/css" href="//common.css" />

		<ten:echo data="_data.CSS" />
	</ten:block>

	<!-- Общие скрипты, вставляются перед остальными. Может быть переопределён выше -->
	<ten:block name="JS" type="default">
		<script type="text/javascript" src="//common.js"> </script>

		<ten:echo data="_data.JS" />
	</ten:block>

</ten:root>